#!/usr/bin/env bash
# Bash script to update and configure an Ubuntu server with Nginx

# apt operations
sudo apt update -y
sudo apt install nginx -y
# Configuration variables
replacment="\\\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n\n"
nginx_sites="/etc/nginx/sites-enabled/default"
location=$(grep -Fn location $nginx_sites | head -1 | cut -d":" -f1)
sudo sed -i "/listen 80 default_server/i add_header XR-Served-By $(hostname);" ${nginx_sites}
sudo sed -i "${location}i ${replacment}" ${nginx_sites}
sudo sh -c 'echo "Hello World!" > /var/www/html/index.nginx-debian.html' # Create default index
sudo service nginx restart # Restart service
